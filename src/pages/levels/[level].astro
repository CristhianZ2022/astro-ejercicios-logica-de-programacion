---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { ejercicios } from '../../lib/data.js';

const { level } = Astro.params;
const ejerciciosDelNivel = ejercicios.filter(e => e.nivel === Number(level));

---

<Layout title={`Nivel ${level}`}>
  <h1 class="text-6xl font-bold text-center my-12">
    Nivel <span class="text-purple-600">{level}</span>
  </h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
    {ejerciciosDelNivel.map(ej => (
      <a 
        href={`/ejercicio/${ej.slug}`}
        class="bg-white rounded-xl shadow-lg p-6 hover:shadow-2xl transform hover:-translate-y-1 transition"
      >
        <h3 class="text-xl font-bold mb-2">{ej.titulo}</h3>
        <p class="text-sm text-gray-600 capitalize">Dificultad: {ej.dificultad}</p>
        <p class="text-xs text-gray-500 mt-2">Ã‰xito: {ej.tasaExito}%</p>
      </a>
    ))}
  </div>
</Layout>